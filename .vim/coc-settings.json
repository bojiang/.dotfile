{
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "black",
  "python.formatting.blackArgs": ["--skip-string-normalization"],
  "coc.preferences.formatOnSaveFiletypes": ["json"],
  "coc.preferences.hoverTarget": "echo",
  "signature.target": "echo",
  "python.linting.pylintEnabled": true,
  "python.linting.enabled": true,
  "python.sortImports.args": ["-m3", "--tc", "--force-grid-wrap=0", "--use-parentheses", "-l88", "--ensure-newline-before-comments"],
  "json.format.enable": true,
  "explorer.file.showHiddenFiles": true,
  "explorer.file.tabCD": false,
  "explorer.keyMappings": {
    "<cr>": ["expandable?", "expand", "open"]
  },
  "explorer.icon.enableNerdfont": true
}
